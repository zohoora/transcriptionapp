{
  "name": "transcription-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "e2e": "wdio run e2e/wdio.conf.ts",
    "e2e:headless": "wdio run e2e/wdio.conf.ts --headless",
    "visual:test": "playwright test --config=tests/visual/playwright.config.ts",
    "visual:update": "playwright test --config=tests/visual/playwright.config.ts --update-snapshots",
    "visual:report": "playwright show-report tests/visual/playwright-report",
    "mutation:test": "stryker run",
    "soak:test": "./tests/soak/soak_test.sh",
    "soak:quick": "cd src-tauri && SOAK_DURATION_SECS=60 cargo test --release soak_test_extended -- --ignored --nocapture",
    "soak:1h": "cd src-tauri && SOAK_DURATION_SECS=3600 cargo test --release soak_test_extended -- --ignored --nocapture"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-clipboard-manager": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@playwright/test": "^1.49.0",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/vitest-runner": "^8.0.0",
    "@tauri-apps/cli": "^2.0.0",
    "@wdio/cli": "^9.0.0",
    "@wdio/local-runner": "^9.0.0",
    "@wdio/mocha-framework": "^9.0.0",
    "@wdio/spec-reporter": "^9.0.0",
    "expect-webdriverio": "^5.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.16",
    "vitest-axe": "^0.1.0"
  }
}

{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Transcription App",
  "version": "0.1.0",
  "identifier": "com.transcriptionapp.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Scribe",
        "width": 320,
        "height": 700,
        "minWidth": 300,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "macOS": {
      "entitlements": "./entitlements.plist",
      "infoPlist": "./Info.plist"
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["fabricscribe"]
      }
    }
  }
}
